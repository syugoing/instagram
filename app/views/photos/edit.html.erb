<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p class="flash"><%= notice %></p>
    <h1>投稿を編集する</h1>

    <%= form_for(@photo) do |f| %>
    <%= f.error_messages! %>

      <div class="field">
        <%= send_img(@photo) %>
      </div>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>

      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>

    <%= link_to "写真一覧にもどる", photos_path %>

  </div>
</div>
